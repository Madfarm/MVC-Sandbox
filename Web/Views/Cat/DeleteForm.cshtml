@model Cat

<div class="container">

    <form asp-controller="Cat" asp-action="DeleteForm">
        <h1>Are you seriously murdering @Model.Name?</h1>
        <h2>They're only @Model.Age years old!</h2>

        <div class="row" style="height: 500px">
            <img src="@Model.Image" alt="@Model.Name" class="col mw-100 mh-100" />
        </div>

        <input type="submit" class="btn btn-danger row" value="YES, I'm a monster" />
    </form>

    <a class="btn btn-success row" asp-controller="Cat" asp-action="Index">
        Back to Cats
    </a>

</div>

